<Window x:Class="Kursach.Grabej"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kursach"
        xmlns:objects="clr-namespace:Kursach.Objects"
        mc:Ignorable="d"        
        Title="Grabej" Height="200" Width="400"
        Background="{DynamicResource MainBackground}" WindowStyle="None"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <objects:MoneyConverter x:Key="MoneyConverter"/>
    </Window.Resources>
    
    <Border BorderBrush="Black"
            BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border Background="{DynamicResource AppPanelColor}">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">

                    <Button Width="30" Content="x"
                            Click="Button_Click"
                            Style="{StaticResource AppStateButtonStyle}"/>

                </StackPanel>
            </Border>

            <StackPanel Grid.Row="1" Margin="15 0 0 0">

                <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                    <TextBlock Text="Тариф: " FontSize="20"
                               Foreground="{DynamicResource MainForeground}"/>
                    <ComboBox Width="150" 
                              SelectedItem="{Binding SelectedTarif, UpdateSourceTrigger=PropertyChanged}"
                              DisplayMemberPath="Title" ItemsSource="{Binding Tarify}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                    <TextBlock Text="Время: " FontSize="20"
                               Foreground="{DynamicResource MainForeground}"/>
                    <TextBlock Text="{Binding Hours, UpdateSourceTrigger=PropertyChanged}"
                               FontSize="20" Foreground="{DynamicResource MainForeground}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                    <TextBlock Text="Сумма: " FontSize="20"
                               Foreground="{DynamicResource MainForeground}"/>
                    <TextBlock Text="{Binding Price, Converter={StaticResource MoneyConverter}}" FontSize="20"
                               Foreground="{DynamicResource MainForeground}"/>
                </StackPanel>
                
            </StackPanel>

            <Button Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Content="Оплатить" Command="{Binding PayCommand}"
                    Height="35" Width="75" FontSize="14"
                    IsDefault="True"
                    Style="{StaticResource MainButtonStyle}"/>

        </Grid>
    </Border>
</Window>
