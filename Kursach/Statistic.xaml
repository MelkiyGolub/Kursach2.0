<Window x:Class="Kursach.Statistic"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:obj="clr-namespace:Kursach.Objects"
        mc:Ignorable="d"
        Title="Statistic" Height="210" Width="300"
        Background="{DynamicResource MainBackground}" WindowStyle="None"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <obj:Statictic/>
    </Window.DataContext>

    <Border BorderBrush="Black" BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
             </Grid.RowDefinitions>

            <Border Background="{DynamicResource AppPanelColor}">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">

                    <Button Width="30" Content="x"
                            Click="Button_Click"
                            Style="{StaticResource AppStateButtonStyle}"/>

                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" Grid.Row="1">
                <TextBlock Text="Кол-во посетиTелей: "
                           Foreground="{DynamicResource MainForeground}"
                           FontSize="18" 
                           Margin="5"/>

                <TextBlock Foreground="{DynamicResource MainForeground}" 
                           Text="{Binding Clients}"
                           FontSize="18" Margin="0 6 0 0"/>
            </StackPanel>            

        </Grid>
  </Border>
</Window>
